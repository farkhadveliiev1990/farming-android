<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/view_grey" />

    <LinearLayout
        android:id="@+id/layout_route_more"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:background="@color/green"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="农技文章"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/text_blackgrey"/>

        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/icon_enter"
            android:text="更多"
            android:textColor="@color/text_whitegrey"
            android:drawablePadding="3dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/line_grey1"/>

    <com.dmy.farming.view.MyGridView
        android:id="@+id/grid_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:listSelector="@android:color/transparent"
        android:numColumns="1">
    </com.dmy.farming.view.MyGridView>

</LinearLayout>