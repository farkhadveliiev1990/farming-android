<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_grey"
    android:orientation="vertical" >

    <ImageView android:id="@+id/bar_top_status"
        android:layout_width="match_parent"
        android:background="@color/main_green"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/main_green"
        android:layout_height="48dp" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="38dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/icon_password"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/edit_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/view_grey"
                android:hint="请输入6-17位新密码"
                android:maxLines="1"
                android:textColor="@color/text_grey"
                android:maxLength="17"
                android:inputType="numberPassword"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/showPwdImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_hide"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/line_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="38dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/icon_password"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/edit_pass2"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_gravity="center_vertical"
                android:background="#f6f6f6"
                android:maxLines="1"
                android:textColor="@color/text_grey"
                android:maxLength="17"
                android:inputType="numberPassword"
                android:hint="请再次输入密码"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/line_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="38dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/icon_location"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/edit_position"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="#f6f6f6"
                android:maxLines="1"
                android:textColor="@color/text_grey"
                android:hint="定位未开启，请选择地区"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/img_open"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_open"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/line_grey" />

        <Button
            android:id="@+id/button_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_btn"
            android:text="同意协议并注册"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:text="当点击注册时，表示您同意"
                android:textColor="@color/text_grey"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/text_serviceAgreement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:text="《农事在线APP服务协议》"
                android:textColor="@color/green"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>