<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/layout_frame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="内蒙古：今年种植意向变化大玉米减弱 小麦粳稻大豆"
                android:textSize="16sp"
                android:textColor="@color/text_blackgrey"/>

            <TextView
                android:id="@+id/num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="356"
                android:textColor="@color/text_whitegrey"
                android:drawableLeft="@drawable/a_icon_browse"
                android:drawablePadding="10dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:src="@drawable/img_list1"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_grey1" />

</LinearLayout>