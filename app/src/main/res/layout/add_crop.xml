<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView android:id="@+id/bar_top_status"
        android:layout_width="match_parent"
        android:background="@color/main_green"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/main_green"
        android:layout_height="48dp" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="添加作物"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_crop_category"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="作物类别"
                    android:textSize="15sp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/text_crop_category"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="请选择作物类别"
                    android:textColor="@color/text_whitegrey"
                    android:textSize="14sp"
                    android:gravity="center_vertical|right"
                    android:drawableRight="@drawable/q_icon_right"
                    android:drawablePadding="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_crop_name"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="作物名称"
                    android:textSize="15sp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/text_crop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="请选择作物名称"
                    android:textColor="@color/text_whitegrey"
                    android:textSize="14sp"
                    android:gravity="center_vertical|right"
                    android:drawableRight="@drawable/q_icon_right"
                    android:drawablePadding="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="种植面积"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"/>
                <EditText
                    android:id="@+id/edit_area"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="亩"
                    android:textColor="@color/text_grey"
                    android:textSize="14sp"
                    android:gravity="center_vertical|right"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="种植时间"
                    android:textSize="15sp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="请选种植时间"
                    android:textColor="@color/text_whitegrey"
                    android:textSize="14sp"
                    android:gravity="center_vertical|right"
                    android:drawableRight="@drawable/q_icon_right"
                    android:drawablePadding="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="种植地区"
                    android:textSize="15sp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/text_position"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="请选择种植地区"
                    android:textColor="@color/text_whitegrey"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:gravity="center_vertical|right"
                    android:drawablePadding="10dp"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/q_bg_btn"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"/>

    </FrameLayout>
</LinearLayout>
